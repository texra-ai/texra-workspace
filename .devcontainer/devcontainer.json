{
  "name": "TeXRA LaTeX Environment",
  "image": "sanjibsen/weblatex:latest",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "texra-ai.texra",
        "James-Yu.latex-workshop",
        "valentjn.vscode-ltex",
        "streetsidesoftware.code-spell-checker",
        "znck.grammarly"
      ],
      "settings": {
        "latex-workshop.latex.autoBuild.run": "onSave",
        "latex-workshop.latex.outDir": "./PDF",
        "latex-workshop.view.pdf.viewer": "tab",
        "latex-workshop.latex.autoClean.run": "onBuilt",
        "editor.wordWrap": "on",
        "editor.fontSize": 14,
        "terminal.integrated.fontSize": 14
      }
    }
  },
  
  "postCreateCommand": "bash /workspaces/texra-workspace/.devcontainer/auto-setup.sh",
  "workspaceFolder": "/workspaces/texra-workspace",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  "forwardPorts": [],
  "remoteUser": "vscode"
}